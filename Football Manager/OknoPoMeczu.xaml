                        <GridViewColumn Header="Poziom"
                        DisplayMemberBinding="{Binding umiejetnosci}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView Grid.Column="1" Name="lGosc11">
                <ListView.View>
